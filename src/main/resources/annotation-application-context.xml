<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.alforsconsulting" />

    <bean id="pepperoni-pizza" class="com.alforsconsulting.pizzastore.menu.pizza.Pizza"
          scope="prototype">
        <property name="toppings" value="Pepperoni"/>
    </bean>

    <bean id="moe-customer" class="com.alforsconsulting.pizzastore.customer.Customer"
          scope="prototype">
        <property name="name" value="moe"/>
    </bean>

    <bean id="curly-customer" class="com.alforsconsulting.pizzastore.customer.Customer"
          scope="prototype">
        <property name="name" value="curly"/>
    </bean>

</beans>