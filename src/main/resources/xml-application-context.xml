<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="store" class="com.alforsconsulting.pizzastore.PizzaStore"/>
    <bean id="pizza" class="com.alforsconsulting.pizzastore.menu.pizza.Pizza"
          scope="prototype"/>
    <bean id="sausage-pizza" class="com.alforsconsulting.pizzastore.menu.pizza.Pizza"
          scope="prototype">
        <constructor-arg type="String" value="Sausage"/>
    </bean>
    <bean id="pepperoni-pizza" class="com.alforsconsulting.pizzastore.menu.pizza.Pizza"
          scope="prototype">
       <property name="toppings" value="Pepperoni"/>
    </bean>
    <bean id="breadsticks" class="com.alforsconsulting.pizzastore.menu.sides.BreadSticks"
          scope="prototype"/>

</beans>